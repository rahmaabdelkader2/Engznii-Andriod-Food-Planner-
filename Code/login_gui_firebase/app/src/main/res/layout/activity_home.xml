<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".home.view.HomeActivity">

    <!-- Top Half - Single Random Meal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_weight="0"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/mainMealImage"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:contentDescription="Main meal image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/mainMealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mainMealCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/mainMealArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Bottom Half - 10 Random Meals -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="356dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/gotocalender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calnder" />

        <Button
            android:id="@+id/gotoprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gotoprofile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="More Random Meals"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mealRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:clipToPadding="true"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp" />

    </LinearLayout>


</LinearLayout>